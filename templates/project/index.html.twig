{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex flex-column">
    {% include "_navbar.html.twig" %}
</div>
{# <div class="container">
<div class="project">
    <h1 class="text-center pb-3">Mes projets</h1>
</div>
<hr>
</div> #}
<body class="d-flex flex-column justify-content-center">
    <section class="myprojects pt-3">
        <section class="swiper mySwiper mb-5 mx-5">
            <div class="swiper-wrapper">
                {% for project in projects %}
                    {% for image in project.images %}
                        {% if image.isMain %}
                            <div class="swiper-slide d-flex flex-column position-relative">
                                <img class="img-fluid" src="{{ asset('build/images/' ~ image.name)}}">
                                <a class="stretched-link" href="{{ path('project_show', { 'id': project.id }) }}">
                                {{ project.name }}
                            </a>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endfor %}

            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div>
        </section>
    </section>
    <div class="d-flex flex-column pt-5">
        {% include "_homebtn.html.twig" %}
    </div>
</body>
<!-- Swiper JS -->
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>
    var swiper = new Swiper(".mySwiper", {
    slidesPerView: 3,
    centerMode: true,
    centerPadding: '20px',
    spaceBetween: 30,
    navigation: {
    nextEl: ".swiper-button-next",
    prevEl: ".swiper-button-prev",
    },
    breakpoints: {
    0: {
    slidesPerView: 1,
    spaceBetween: 20
    },
    830: {
    slidesPerView: 2,
    spaceBetween: 20
    },
    1240: {
    slidesPerView: 3,
    spaceBetween: 40
    },
    }
    });
</script>

{% endblock %}